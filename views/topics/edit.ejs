<% include ../partials/header %>

<div class = "container">
    <form action = "/topics/<%= topic._id %>?_method=PUT" method = "POST">
        <div class = "form-group">
            <input class = "form-control" type = "text" name = "topic[name]" value = "<%= topic.name %>">
        </div>
        <div class = "form-group">
            <input class = "form-control" type = "text" name = "topic[description]" value = "<%= topic.description %>">
        </div>
        <div class = "form-group">
            <button class = "btn btn-primary btn-block">Submit</button>
        </div>
    </form>
    <form action = "/topics/<%= topic._id %>?_method=DELETE" method = "POST">
        <button class = "btn btn-danger">Delete</button>
    </form>
</div>

<% include ../partials/footer %>