<% include ../partials/header %>

<div class = "container">
    <form action = "/topics/<%= topic_id %>/posts" method = "POST">
        <div class = "form-group">
            <input class = "form-control" type = "text" name = "post[title]" placeholder = "Title">
        </div>
        <div class = "form-group">
            <textarea class="form-control" rows = "5" name = "post[content]" placeholder = "Write your post here"></textarea>
        </div>
        <div class = "form-group">
            <button class = "btn btn-primary btn-block">Submit</button>
        </div>
    </form>
</div>

