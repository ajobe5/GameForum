<% include ../partials/header %>

<div class = "container">
    <form action = "/topics/<%= topic_id %>/posts/<%= post._id %>?_method=PUT" method = "POST">
        <div class = "form-group">
            <input class = "form-control" type = "text" name = "post[title]" value = "<%= post.title %>">
        </div>
        <div class = "form-group">
            <textarea class="form-control" rows = "5" name = "post[content]"><%= post.content %></textarea>
        </div>
        <div class = "form-group">
            <button class = "btn btn-primary btn-block">Submit</button>
        </div>
    </form>
</div>

<% include ../partials/footer %>